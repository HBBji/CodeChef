#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int w,l;
	    cin>>w>>l;
	    
	    if((w%2!=0 && l%2!=0) || (w%2==0 && w%2==0)){
	        if(w%2 == 0 || l%2 == 0){
	            cout<<"YES"<<endl;
	        }
	        else{
	            cout<<"NO"<<endl;
	        }
	    }
	    else{
	        cout<<"YES"<<endl;
	    }
	}
	return 0;
}
